<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderType"
    android:background="@drawable/foodback">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/menu"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        android:background="@drawable/soup"
        android:onClick="starter"
        android:scaleType="fitXY"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="-2dp"
        android:layout_toStartOf="@+id/imageButton"
        android:background="@drawable/chicken"
        android:onClick="nveg"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/v"
        android:onClick="veg"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/button6"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/c0"
        android:onClick="dessert"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/total_on_mm"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginStart="-7dp"
        android:layout_marginBottom="-16dp"
        android:text="Starters"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="66dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="#F4A75B"
        android:onClick="fin_ord"
        android:text="Proceed to checkout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="1dp"
        android:text="No-Vegetables"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:text="Vegetables"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>
